<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beranda"
    tools:context="com.example.lenovo.animalsounds.RumahActivity">

    <ImageView
        android:id="@+id/kucing"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/kucing" />

    <Button
        android:id="@+id/btn_kucing"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_below="@+id/anjing"
        android:layout_alignLeft="@+id/kucing"
        android:layout_marginLeft="25sp"
        android:background="@drawable/button_background"
        android:textColor="#ffff"
        android:text="kucing"/>

    <ImageView
        android:id="@+id/anjing"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_alignTop="@+id/kucing"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/kucing"
        android:layout_toRightOf="@+id/kucing"
        android:src="@drawable/anjing" />

    <Button
        android:id="@+id/btn_anjing"
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:layout_below="@+id/anjing"
        android:layout_alignLeft="@+id/anjing"
        android:layout_marginLeft="25sp"
        android:background="@drawable/button_background"
        android:textColor="#ffff"
        android:text="anjing"/>


</RelativeLayout>
